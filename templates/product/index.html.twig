{% extends 'base.html.twig' %}

{% block title %}
	{{ product.name }}
	- Détails
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<div>
			<h2>{{ product.name }}</h2>
			<p>{{ product.description }}</p>
			<p>Prix :
				{{ product.price }}
				€</p>
			{% if app.user %}
				<a href="{{ path('app_basket_add', { id: product.id }) }}" class="btn btn-primary">Ajouter au panier</a>
			{% else %}
				<p>
					<a href="{{ path('app_login') }}">Connectez-vous</a>
					pour ajouter ce produit à votre panier.</p>
			{% endif %}
		</div>

		<div>
			<h1>Liste des produits</h1>
			{% for p in products %}
				<p>{{p.name}}</p>
				{% if p.image is not empty %}
					<img src="{{ asset('uploads/' ~ p.image) }}" style="max-width:100px;">
				{% endif %}

				<hr>
			{% else %}
				<p>Aucun produit</p>
			{% endfor %}
		</div>

		<div>
			<h2>Ajouter un produit</h2>
			{{form(ajout_produit)}}
			</div>

		</div>
	{% endblock %}
