{% extends 'base.html.twig' %}

{% block title %}Détail de la commande n°{{ order.id }}{% endblock %}

{% block body %}
    <h1>Détail de la commande n°{{ order.id }}</h1>
    <p>Date de la commande : {{ order.date|date('d/m/Y H:i') }}</p>

    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Prix à l'unité</th>
                <th>Quantité</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {% for content in order.basketContents %}
                <tr>
                    <td>{{ content.product.name }}</td>
                    <td>{{ content.product.price }} €</td>
                    <td>{{ content.quantity }}</td>
                    <td>{{ content.product.price * content.quantity }} €</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <p><strong>Total de la commande : {{ order.getTotal() }} €</strong></p>
    <a href="{{ path('app_account') }}" class="btn btn-secondary">Retour à l'historique</a>
{% endblock %}
