<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"> {% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body>
		<nav>
			<a href="{{ path('app_app') }}">Accueil</a>
			{% if app.user %}
				<a href="{{ path('app_account') }}">{{ t("account")|trans }}</a>
				<a href="{{ path('app_basket') }}">{{ t("basket")|trans }}</a>
				<a href="{{ path('app_logout') }}">{{ t("logout")|trans }}</a>
			{% else %}
				<a href="{{ path('app_login') }}">{{ t("login")|trans }}</a>
				<a href="{{ path('app_register') }}">{{ t("register")|trans }}</a>
				{# <a href="{{ path('app_super_admin') }}">{{ t("admin")|trans }}</a>
				<a href="{{ path('app_product') }}">{{ t("product")|trans }}</a> #}
			{% endif %}
		</nav>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		{% for message in app.flashes('error') %}
			<div class="alert alert-danger">
				{{ message }}
			</div>
		{% endfor %}


		{% block body %}{% endblock %}
	</body>
</html>
